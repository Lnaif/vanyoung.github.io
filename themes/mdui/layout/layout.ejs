<% if (theme.color.random === 'global' || theme.color.random === 'post') { %>
  <% var primary_color = ['red','pink','purple','deep-purple','indigo','blue','light-blue','cyan','teal','green','light-green','lime','yellow','amber','orange','deep-orange','brown','grey','blue-grey'];
    var accent_color = ['red','pink','purple','deep-purple','indigo','blue','light-blue','cyan','teal','green','light-green','lime','yellow','amber','orange','deep-orange'];
    var primary_num = Math.floor(Math.random() * primary_color.length);
    var accent_num = Math.floor(Math.random() * accent_color.length);
  %>
<% } %>
<!DOCTYPE html>
<html <% if(config.language !== null) { %>lang="<%- config.language.substring(0,2) %>"<% } %>>
<% if (theme.color.random === 'global' || theme.color.random === 'post') { %>
  <%-partial('partials/head', { primary_color: primary_color[primary_num] })%>
<% } else { %>
  <%-partial('partials/head')%>
<% } %>

<% if (theme.color.random === 'global') { %>
  <body class="mdui-appbar-with-toolbar mdui-theme-primary-<%= primary_color[primary_num] %> mdui-theme-accent-<%= accent_color[accent_num] %> <% if (theme.color.layout === 'dark' || page.layout === 'galleries' || page.layout === 'gallery') { %>mdui-theme-layout-dark<% } %> <% if (!is_category() && !is_tag() && !is_year() && page.layout !== 'galleries' || page.layout !== 'gallery') { %>mdui-drawer-body-left<% } %> <% if (is_category() || is_tag() || is_year()) { %>side-content style-fix<% } %> drawer-overlay-none" <% if (is_category() || is_tag() || is_year()) { %>onresize="styleChanging()"<% } %>>
<% } else if (theme.color.random === 'post' && is_post()) { %>
  <% if (page.primary_color || page.accent_color) { %>
    <body class="mdui-appbar-with-toolbar mdui-theme-primary-<%= page.primary_color || primary_color[primary_num] %> mdui-theme-accent-<%= page.accent_color || accent_color[accent_num] %> <% if (theme.color.layout === 'dark' || page.layout === 'galleries' || page.layout === 'gallery') { %>mdui-theme-layout-dark<% } %> <% if (!is_category() && !is_tag() && !is_year() && page.layout !== 'galleries' || page.layout !== 'gallery') { %>mdui-drawer-body-left<% } %> <% if (is_category() || is_tag() || is_year()) { %>side-content style-fix<% } %> drawer-overlay-none" <% if (is_category() || is_tag() || is_year()) { %>onresize="styleChanging()"<% } %>>
  <% } else { %>
    <body class="mdui-appbar-with-toolbar mdui-theme-primary-<%= primary_color[primary_num] %> mdui-theme-accent-<%= accent_color[accent_num] %> <% if (theme.color.layout === 'dark' || page.layout === 'galleries' || page.layout === 'gallery') { %>mdui-theme-layout-dark<% } %> <% if (!is_category() && !is_tag() && !is_year() && page.layout !== 'galleries' || page.layout !== 'gallery') { %>mdui-drawer-body-left<% } %> <% if (is_category() || is_tag() || is_year()) { %>side-content style-fix<% } %> drawer-overlay-none" <% if (is_category() || is_tag() || is_year()) { %>onresize="styleChanging()"<% } %>>
  <% } %>
<% } else { %>
  <body class="mdui-appbar-with-toolbar mdui-theme-primary-<%= theme.color.primary_color %> mdui-theme-accent-<%= theme.color.accent_color %> <% if (theme.color.layout === 'dark' || page.layout === 'galleries' || page.layout === 'gallery') { %>mdui-theme-layout-dark<% } %> <% if (!is_category() && !is_tag() && !is_year() && page.layout !== 'galleries' || page.layout !== 'gallery') { %>mdui-drawer-body-left<% } %> <% if (is_category() || is_tag() || is_year()) { %>side-content style-fix<% } %> drawer-overlay-none" <% if (is_category() || is_tag() || is_year()) { %>onresize="styleChanging()"<% } %>>
<% } %>
<div id="top"></div>

<%- partial('partials/appbar') %>

<% if (is_category() || is_tag() || is_year()) { %>
  <%- partial('partials/archives/side_content') %>
<% } %>

<main>
  <%- body %>
</main>

<% if (page.layout !== 'galleries'  && page.layout !== 'gallery') { %>
  <%- partial('partials/drawer') %>
<% } %>

<div id="outdated" style="z-index: 9999;">
  <h6><%= __('outdated_browser.title')  %></h6>
  <p><%= __('outdated_browser.line_one') %><a id="btnUpdateBrowser" href="http://outdatedbrowser.com/"><%= __('outdated_browser.link') %></a></p>
  <p class="last"><a href="#" id="btnCloseUpdateBrowser" title="<%= __('outdated_browser.close') %>">&times;</a></p>
</div>
<%- partial('partials/dialogs') %>
<%- partial('partials/import_js') %>
</body>

</html>
