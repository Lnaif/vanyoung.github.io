<div id="friends-page" class="mdui-container-fluid">
  <div>
    <% if (page.header) { %>
    <div class="friends-title">     
      <div class="mdui-card mdui-center" style="overflow: scroll;">
        <div class="mdui-card-header index-welcome">
          <img class="mdui-card-header-avatar" src="<%= theme.style.avatar %>" style="margin-right: 8px;"/>
          <div class="mdui-valign">
            <div class="mdui-typo-subheading-opacity">
              <%= page.header %>
            </div>
          </div>
          <div class="flex-spacer"></div>
          <button class="mdui-btn mdui-btn-icon mdui-color-theme-accent mdui-ripple" mdui-menu="{target: '#menu-index-share'}"><i class="mdui-icon material-icons">&#xe80d;</i></button>
          <%- partial('partials/menu/index_share') %>
        </div>
      </div>
    </div>
    <% } %>
  </div>
  <% if (site.data.friends) { %>
  <div class="mdui-row">
    <% for (var i in site.data.friends) { %>
    <% if (site.data.friends[i].down !== true) { %>
    <div class="mdui-col-xs-6 mdui-col-md-3">
      <div class="mdui-card friends-container">
<!--               <a href="<%= site.data.friends[i].link %>" target="_blank" class="content">
                <img class="avatar" src="<%= site.data.friends[i].avatar %>" alt="<%= i %>"/>
                <div class="name mdui-text-color-theme-text">
                  <%= i %>
                </div>
                <div class="descr mdui-text-color-theme-text">
                  <%= site.data.friends[i].descr %>
                </div>
                <div class="spacer"></div>
                <div class="mdui-card-actions no-padding">
                  <button class="mdui-btn mdui-ripple mdui-btn-block mdui-text-color-theme-accent"><%= __('friends.visit') %></button>
                </div>
              </a>  -->
              <ul class="mdui-list" style="padding: 8px;">
                <a href="<%= site.data.friends[i].link %>" title="<%= i %>" target="_blank">
                  <li class="mdui-list-item mdui-ripple">
                    <div class="mdui-list-item-avatar"><img src="<%= site.data.friends[i].avatar %>" alt="<%= i %>" /></div>
                    <div class="mdui-list-item-content">
                      <div class="mdui-list-item-title mdui-text-truncate"><%= i %></div>
                      <div class="mdui-list-item-text mdui-list-item-one-line mdui-text-truncate"><span class="mdui-text-color-theme-text"><%= site.data.friends[i].descr %></span></div>
                    </div>
                  </li>
                </a>
              </ul>

            </div>
          </div>
        <% } %>
      <% } %>
    </div>
    <%-partial('../partials/fab/index')%>
  <% } %>
</div>
